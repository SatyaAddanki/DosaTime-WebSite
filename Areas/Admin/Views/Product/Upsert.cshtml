@model NewBook.Models.ViewModels.ProductViewModel;
@{
    var title = "Create product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <h2>@title</h2>
    <input type="hidden" asp-for="@Model.product.Id" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.product.Name"></label>
                <input asp-for="@Model.product.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.product.Title"></label>
                <textarea asp-for="@Model.product.Title" class="form-control"></textarea>
            </div>
            <div class="form-group">
                Select Category
                @Html.DropDownListFor(m => m.product.CategoryId, Model.categoryList, "SelectList Category", new { @class="form-control"})
            </div>
            <div class="form-group">
                Select Files
                <input type="file" name="files" class="form-control" />
            </div>
        </div>

    </div>
    


    <div>
        <button class="btn btn-info">Submit</button>

    </div>
</form>


